{
    "name": "shopify-app",
    "version": "1.0.0",
    "description": "Typescript Project",
    "main": "dist/index.js",
    "license": "MIT",
    "scripts": {
        "build-ts": "tsc",
        "postinstall": "npm run build-ts",
        "start": "npm run serve",
        "serve": "node dist/index.js",
        "dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "build": "webpack",
        "lint": "tslint src/**/*.ts",
        "test": "jest --colors --watchAll",
        "test:ci": "cross-env CI=true jest --colors",
        "format": "prettier --write \"src/**/*\"",
        "conflict-rules": "tslint-config-prettier-check ./tslint.json"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfig": "<rootDir>/tsconfig.json"
            }
        },
        "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
        "moduleNameMapper": {
            "^~/(.*)$": "<rootDir>/src/$1"
        },
        "moduleDirectories": ["<rootDir>/src", "node_modules"],
        "preset": "ts-jest"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "tslint -c tslint.json --fix",
            "git add"
        ],
        "*.{json,css}": ["prettier --write", "git add"]
    },
    "prettier": {
        "parser": "typescript",
        "semi": false,
        "singleQuote": true,
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/jest": "^24.0.11",
        "@types/node": "^11.13.4",
        "chai": "^4.2.0",
        "cross-env": "^5.2.0",
        "fork-ts-checker-webpack-plugin": "^1.0.2",
        "husky": "^1.3.1",
        "jest": "^24.7.1",
        "lint-staged": "^8.1.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.17.0",
        "ts-jest": "^24.0.2",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.1.0",
        "tsconfig-paths": "^3.8.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^5.15.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.4.3",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.0",
        "webpack-node-externals": "^1.7.2",
        "yarn": "^1.15.2"
    },
    "dependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/cookie": "^0.3.2",
        "@types/dotenv": "^6.1.1",
        "@types/dotenv-flow": "^0.2.1",
        "@types/express": "^4.16.1",
        "@types/request": "^2.48.1",
        "@types/request-promise": "^4.1.42",
        "body-parser": "^1.18.3",
        "cookie": "^0.3.1",
        "dotenv": "^7.0.0",
        "dotenv-flow": "^0.3.0",
        "express": "^4.16.4",
        "fast-csv": "^2.4.1",
        "nonce": "^1.0.4",
        "realm": "^2.26.1",
        "request": "^2.88.0",
        "request-promise": "^4.2.4"
    }
}
