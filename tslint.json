{
    "rules": {
        "no-console": false,
        "semicolon": [true, "never"],
        "prettier": true,
        "no-var-requires": false,
        "variable-name": [
            true,
            "allow-pascal-case",
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ]
    },
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier",
        "tslint-plugin-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "wallaby.js",
            "webpack.config.js"
        ]
    }
}
